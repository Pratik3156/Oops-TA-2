
class Car {
    // Fields (properties of the class)
    String brand;
    String color;
    int year;

    void displayInfo() {
        System.out.println("Car Brand: " + brand);
        System.out.println("Car Color: " + color);
        System.out.println("Car Year: " + year);
    }
}

public class Main {
    public static void main(String[] args) {
        Car myCar = new Car();
        myCar.brand = "Toyota";
        myCar.color = "Red";
        myCar.year = 2022;
        myCar.displayInfo();
    }
}
