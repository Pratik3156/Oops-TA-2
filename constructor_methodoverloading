class Person {
    String name;
    int age;

    Person(String n, int a) {
        name = n;
        age = a;
        System.out.println("Constructor called: Person object created.");
    }

    void greet() {
        System.out.println("Hello! My name is " + name + ".");
    }

    void greet(String message) {
        System.out.println(message + " I'm " + name + " and I'm " + age + " years old.");
    }

    @Override
    protected void finalize() throws Throwable {
        System.out.println("Destructor called: Person object is destroyed.");
    }
}

public class Main {
    public static void main(String[] args) {
        Person p1 = new Person("Alice", 25);

        p1.greet();
        p1.greet("Nice to meet you!");

        p1 = null; 
        System.gc(); 

        System.out.println("End of main method.");
    }
}
